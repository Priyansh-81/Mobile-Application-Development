<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Center Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" />

            <!-- Source -->
            <TextView
                android:id="@+id/textViewSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerSource"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_pill_input"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="14dp" />

            <!-- Destination -->
            <TextView
                android:id="@+id/textViewDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerDestination"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_pill_input"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Date -->
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp" />


            <!-- Trip Type -->
            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textOff="One Way"
                android:textOn="Round Trip"
                android:layout_marginBottom="20dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonReset"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Reset"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_pill_outline"
                    android:textColor="#4F46E5" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_pill_primary"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
